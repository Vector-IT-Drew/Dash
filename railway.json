{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "gunicorn app:app",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  
"crons": [
  {
    "name": "every-2-min",
    "schedule": "*/2 * * * *",
      "command": "python Services/Functions/update_deals_from_monday.py"
    }
  ]
  
}
